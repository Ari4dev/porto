---

<section id="skills" class="skills-section">
  <!-- Animated Background -->
  <div class="skills-bg">
    <div class="gradient-sphere sphere-1"></div>
    <div class="gradient-sphere sphere-2"></div>
    <div class="grid-overlay"></div>
    <div class="floating-shapes">
      <div class="shape shape-1"></div>
      <div class="shape shape-2"></div>
      <div class="shape shape-3"></div>
    </div>
  </div>

  <div class="container">
    <!-- Section Header -->
    <header class="section-header">
      <span class="section-tag">
        <span class="tag-dot"></span>
        My Skills
      </span>
      <h2 class="section-title">
        Technologies I <span class="highlight">Master</span>
      </h2>
      <p class="section-desc">
        A curated toolkit of modern technologies for building exceptional
        digital experiences
      </p>
    </header>

    <!-- Bento Grid -->
    <div class="bento-grid">
      <!-- Frontend Card (Large) -->
      <article class="bento-card bento-large frontend-card">
        <div class="card-glow"></div>
        <div class="card-content">
          <div class="card-header">
            <div class="card-icon">
              <svg
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
              >
                <rect x="2" y="3" width="20" height="14" rx="2"></rect>
                <path d="M8 21h8M12 17v4"></path>
              </svg>
            </div>
            <div class="card-title-group">
              <h3 class="card-title">Frontend</h3>
              <span class="card-badge">Core Stack</span>
            </div>
          </div>

          <div class="skills-list">
            {
              frontendSkills.map((skill, i) => (
                <div class="skill-row" style={`--delay: ${i * 0.1}s`}>
                  <div
                    class="skill-icon"
                    style={`color: ${skill.color}`}
                    set:html={icons[skill.name]}
                  />
                  <div class="skill-details">
                    <span class="skill-name">{skill.name}</span>
                    <div class="skill-bar">
                      <div
                        class="skill-progress"
                        style={`--level: ${skill.level}%; --color: ${skill.color}`}
                      />
                    </div>
                  </div>
                  <span class="skill-percent" style={`color: ${skill.color}`}>
                    {skill.level}%
                  </span>
                </div>
              ))
            }
          </div>
        </div>
      </article>

      <!-- Styling Card (Medium) -->
      <article class="bento-card bento-medium styling-card">
        <div class="card-glow"></div>
        <div class="card-content">
          <div class="card-header">
            <div class="card-icon styling-icon">
              <svg
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
              >
                <path d="M12 2.69l5.66 5.66a8 8 0 1 1-11.31 0z"></path>
              </svg>
            </div>
            <h3 class="card-title">Styling</h3>
          </div>

          <div class="skills-list compact">
            {
              stylingSkills.map((skill, i) => (
                <div class="skill-row" style={`--delay: ${i * 0.1}s`}>
                  <div
                    class="skill-icon"
                    style={`color: ${skill.color}`}
                    set:html={icons[skill.name]}
                  />
                  <div class="skill-details">
                    <span class="skill-name">{skill.name}</span>
                    <div class="skill-bar">
                      <div
                        class="skill-progress"
                        style={`--level: ${skill.level}%; --color: ${skill.color}`}
                      />
                    </div>
                  </div>
                  <span class="skill-percent" style={`color: ${skill.color}`}>
                    {skill.level}%
                  </span>
                </div>
              ))
            }
          </div>
        </div>
      </article>

      <!-- Stats Card (Small) -->
      <article class="bento-card bento-stats">
        <div class="card-glow"></div>
        <div class="stats-grid">
          <div class="stat-block">
            <span class="stat-value">4+</span>
            <span class="stat-label">Years Learning</span>
          </div>
          <div class="stat-block">
            <span class="stat-value">15+</span>
            <span class="stat-label">Technologies</span>
          </div>
          <div class="stat-block">
            <span class="stat-value">20+</span>
            <span class="stat-label">Projects Built</span>
          </div>
        </div>
      </article>

      <!-- Tools Card (Medium) -->
      <article class="bento-card bento-medium tools-card">
        <div class="card-glow"></div>
        <div class="card-content">
          <div class="card-header">
            <div class="card-icon tools-icon">
              <svg
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
              >
                <path
                  d="M14.7 6.3a1 1 0 0 0 0 1.4l1.6 1.6a1 1 0 0 0 1.4 0l3.77-3.77a6 6 0 0 1-7.94 7.94l-6.91 6.91a2.12 2.12 0 0 1-3-3l6.91-6.91a6 6 0 0 1 7.94-7.94l-3.76 3.76z"
                ></path>
              </svg>
            </div>
            <h3 class="card-title">Tools</h3>
          </div>

          <div class="skills-list compact">
            {
              toolsSkills.map((skill, i) => (
                <div class="skill-row" style={`--delay: ${i * 0.1}s`}>
                  <div
                    class="skill-icon"
                    style={`color: ${skill.color}`}
                    set:html={icons[skill.name]}
                  />
                  <div class="skill-details">
                    <span class="skill-name">{skill.name}</span>
                    <div class="skill-bar">
                      <div
                        class="skill-progress"
                        style={`--level: ${skill.level}%; --color: ${skill.color}`}
                      />
                    </div>
                  </div>
                  <span class="skill-percent" style={`color: ${skill.color}`}>
                    {skill.level}%
                  </span>
                </div>
              ))
            }
          </div>
        </div>
      </article>

      <!-- Backend Card (Small) -->
      <article class="bento-card bento-small backend-card">
        <div class="card-glow"></div>
        <div class="card-content">
          <div class="card-header">
            <div class="card-icon backend-icon">
              <svg
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
              >
                <ellipse cx="12" cy="5" rx="9" ry="3"></ellipse>
                <path d="M21 12c0 1.66-4 3-9 3s-9-1.34-9-3"></path>
                <path d="M3 5v14c0 1.66 4 3 9 3s9-1.34 9-3V5"></path>
              </svg>
            </div>
            <h3 class="card-title">Backend</h3>
          </div>

          <div class="skills-list compact">
            {
              backendSkills.map((skill, i) => (
                <div class="skill-row" style={`--delay: ${i * 0.1}s`}>
                  <div
                    class="skill-icon"
                    style={`color: ${skill.color}`}
                    set:html={icons[skill.name]}
                  />
                  <div class="skill-details">
                    <span class="skill-name">{skill.name}</span>
                    <div class="skill-bar">
                      <div
                        class="skill-progress"
                        style={`--level: ${skill.level}%; --color: ${skill.color}`}
                      />
                    </div>
                  </div>
                  <span class="skill-percent" style={`color: ${skill.color}`}>
                    {skill.level}%
                  </span>
                </div>
              ))
            }
          </div>
        </div>
      </article>
    </div>
  </div>
