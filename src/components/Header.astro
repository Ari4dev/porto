---
const navLinks = [
  { href: "#home", label: "Home" },
  { href: "#about", label: "About" },
  { href: "#skills", label: "Skills" },
  { href: "#contact", label: "Contact" },
];
---

<header class="header" id="header">
  <!-- Reading Progress Bar -->
  <div class="progress-bar" id="progressBar"></div>

  <div class="header-inner">
    <!-- Floating Pill Nav (Desktop) -->
    <nav class="nav-pill">
      {
        navLinks.map((link, index) => (
          <a href={link.href} class={`nav-link ${index === 0 ? "active" : ""}`}>
            {link.label}
          </a>
        ))
      }
    </nav>

    <!-- Actions -->
    <div class="header-actions">
      <button class="btn-theme" id="theme-toggle" aria-label="Toggle theme">
        <svg
          class="icon-sun"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
        >
          <circle cx="12" cy="12" r="5"></circle>
          <path
            d="M12 1v2M12 21v2M4.22 4.22l1.42 1.42M18.36 18.36l1.42 1.42M1 12h2M21 12h2M4.22 19.78l1.42-1.42M18.36 5.64l1.42-1.42"
          ></path>
        </svg>
        <svg
          class="icon-moon"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
        >
          <path d="M21 12.79A9 9 0 1111.21 3 7 7 0 0021 12.79z"></path>
        </svg>
      </button>

      <button class="btn-menu" id="menu-toggle" aria-label="Menu">
        <span></span>
        <span></span>
      </button>
    </div>
  </div>
</header>

<!-- Fullscreen Overlay Menu -->
<div class="overlay-menu" id="overlay-menu">
  <div class="overlay-bg"></div>
  <nav class="overlay-nav">
    {
      navLinks.map((link, index) => (
        <a href={link.href} class="overlay-link" style={`--i: ${index}`}>
          <span class="link-text">{link.label}</span>
        </a>
      ))
    }
  </nav>
  <div class="overlay-footer">
    <a
      href="https://wa.me/6285155452259"
      target="_blank"
      rel="noopener"
      class="overlay-cta"
    >
      Let's Connect
      <svg
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
      >
        <path d="M5 12h14M12 5l7 7-7 7"></path>
      </svg>
    </a>
  </div>
</div>

<style>
  /* ===================================
     HEADER - FLOATING PILL
     =================================== */
  .header {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 100;
    padding: 1.25rem;
  }

  /* Reading Progress Bar */
  .progress-bar {
    position: fixed;
    top: 0;
    left: 0;
    height: 3px;
    width: 0%;
    background: linear-gradient(90deg, var(--color-accent), #ff9f43);
    transition: width 0.1s ease-out;
    z-index: 9999;
  }

  .header-inner {
    display: flex;
    align-items: center;
    justify-content: center;
    max-width: 1200px;
    margin: 0 auto;
    position: relative;
  }

  /* Floating Pill Navigation */
  .nav-pill {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem;
    background: rgba(255, 255, 255, 0.08);
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 100px;
  }

  [data-theme="light"] .nav-pill {
    background: rgba(255, 255, 255, 0.7);
    border: 1px solid rgba(0, 0, 0, 0.08);
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
  }

  .nav-link {
    padding: 0.625rem 1.25rem;
    color: var(--color-text-secondary);
    font-size: 0.875rem;
    font-weight: 500;
    text-decoration: none;
    border-radius: 100px;
    transition: all 0.3s ease;
  }

  .nav-link:hover {
    color: var(--color-text-primary);
  }

  .nav-link.active {
    background: var(--color-accent);
    color: white;
  }

  /* Header Actions */
  .header-actions {
    position: absolute;
    right: 0;
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .btn-theme {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 44px;
    height: 44px;
    background: rgba(255, 255, 255, 0.08);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 50%;
    color: var(--color-text-primary);
    cursor: pointer;
    transition: all 0.3s ease;
    position: relative;
  }

  [data-theme="light"] .btn-theme {
    background: rgba(255, 255, 255, 0.8);
    border: 1px solid rgba(0, 0, 0, 0.08);
  }

  .btn-theme:hover {
    transform: scale(1.05);
    border-color: var(--color-accent);
  }

  .btn-theme svg {
    width: 20px;
    height: 20px;
    position: absolute;
    transition: all 0.4s ease;
  }

  .icon-sun {
    opacity: 0;
    transform: rotate(-90deg) scale(0.5);
  }
  .icon-moon {
    opacity: 1;
    transform: rotate(0) scale(1);
  }

  [data-theme="light"] .icon-sun {
    opacity: 1;
    transform: rotate(0) scale(1);
  }
  [data-theme="light"] .icon-moon {
    opacity: 0;
    transform: rotate(90deg) scale(0.5);
  }

  /* Menu Button */
  .btn-menu {
    display: none;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    gap: 6px;
    width: 44px;
    height: 44px;
    background: rgba(255, 255, 255, 0.08);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 50%;
    cursor: pointer;
    transition: all 0.3s ease;
    z-index: 200;
  }

  [data-theme="light"] .btn-menu {
    background: rgba(255, 255, 255, 0.8);
    border: 1px solid rgba(0, 0, 0, 0.08);
  }

  .btn-menu span {
    display: block;
    width: 18px;
    height: 2px;
    background: var(--color-text-primary);
    border-radius: 2px;
    transition: all 0.4s cubic-bezier(0.68, -0.6, 0.32, 1.6);
  }

  body.menu-open .btn-menu span:first-child {
    transform: rotate(45deg) translate(3px, 3px);
  }

  body.menu-open .btn-menu span:last-child {
    transform: rotate(-45deg) translate(3px, -3px);
  }

  /* ===================================
     DROPDOWN MENU (Compact)
     =================================== */
  .overlay-menu {
    position: fixed;
    top: 80px;
    right: 1.25rem;
    z-index: 90;
    width: 220px;
    background: rgba(10, 14, 39, 0.95);
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 20px;
    padding: 1rem;
    transform: translateY(-10px) scale(0.95);
    opacity: 0;
    visibility: hidden;
    pointer-events: none;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    box-shadow: 0 20px 50px rgba(0, 0, 0, 0.3);
  }

  [data-theme="light"] .overlay-menu {
    background: #ffffff;
    border: 1px solid rgba(0, 0, 0, 0.12);
    box-shadow: 0 20px 50px rgba(0, 0, 0, 0.2);
  }

  body.menu-open .overlay-menu {
    transform: translateY(0) scale(1);
    opacity: 1;
    visibility: visible;
    pointer-events: auto;
  }

  .overlay-bg {
    display: none;
  }

  .overlay-nav {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .overlay-link {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.875rem 1rem;
    text-decoration: none;
    border-radius: 12px;
    transform: translateX(-10px);
    opacity: 0;
    transition: all 0.3s ease;
    transition-delay: calc(var(--i) * 0.05s);
  }

  body.menu-open .overlay-link {
    transform: translateX(0);
    opacity: 1;
  }

  .overlay-link:hover {
    background: rgba(255, 107, 53, 0.1);
  }

  .link-number {
    font-size: 0.65rem;
    font-weight: 700;
    color: var(--color-accent);
    font-family: monospace;
  }

  .link-text {
    font-size: 1rem;
    font-weight: 600;
    color: rgba(255, 255, 255, 0.9);
    transition: color 0.2s ease;
  }

  [data-theme="light"] .link-text {
    color: rgba(0, 0, 0, 0.85);
  }

  .overlay-link:hover .link-text {
    color: var(--color-accent);
  }

  .overlay-footer {
    margin-top: 0.75rem;
    padding-top: 0.75rem;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    transform: translateY(10px);
    opacity: 0;
    transition: all 0.3s ease;
    transition-delay: 0.2s;
  }

  [data-theme="light"] .overlay-footer {
    border-top: 1px solid rgba(0, 0, 0, 0.1);
  }

  [data-theme="light"] .overlay-menu .overlay-link:hover {
    background: rgba(255, 107, 53, 0.1);
  }

  [data-theme="light"] .overlay-menu .overlay-link:hover .link-text {
    color: var(--color-accent);
  }

  body.menu-open .overlay-footer {
    transform: translateY(0);
    opacity: 1;
  }

  .overlay-cta {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    width: 100%;
    padding: 0.75rem 1rem;
    background: var(--color-accent);
    border-radius: 12px;
    color: white;
    font-size: 0.875rem;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .overlay-cta svg {
    width: 16px;
    height: 16px;
  }

  .overlay-cta:hover {
    transform: scale(1.02);
    box-shadow: 0 8px 20px rgba(255, 107, 53, 0.3);
  }

  /* ===================================
     RESPONSIVE
     =================================== */
  @media (max-width: 768px) {
    .nav-pill {
      display: none;
    }

    .btn-menu {
      display: flex;
    }

    .header-actions {
      position: static;
    }

    .header-inner {
      justify-content: flex-end;
    }
  }
</style>

<script>
  const themeToggle = document.getElementById("theme-toggle");
  const menuToggle = document.getElementById("menu-toggle");
  const overlayLinks = document.querySelectorAll(".overlay-link");
  const desktopLinks = document.querySelectorAll(".nav-link");

  // Theme toggle
  themeToggle?.addEventListener("click", () => {
    const html = document.documentElement;
    const next = html.getAttribute("data-theme") === "light" ? "dark" : "light";
    html.setAttribute("data-theme", next);
    localStorage.setItem("theme", next);
  });

  // Menu toggle
  menuToggle?.addEventListener("click", (e) => {
    e.stopPropagation();
    document.body.classList.toggle("menu-open");
    document.body.style.overflow = document.body.classList.contains("menu-open")
      ? "hidden"
      : "";
  });

  // Close menu when clicking outside
  document.addEventListener("click", (e) => {
    const overlayMenu = document.getElementById("overlay-menu");
    const isMenuOpen = document.body.classList.contains("menu-open");

    if (
      isMenuOpen &&
      overlayMenu &&
      !overlayMenu.contains(e.target as Node) &&
      e.target !== menuToggle
    ) {
      document.body.classList.remove("menu-open");
      document.body.style.overflow = "";
    }
  });

  // Overlay link clicks
  overlayLinks.forEach((link) => {
    link.addEventListener("click", (e) => {
      e.preventDefault();

      // Close menu first
      document.body.classList.remove("menu-open");
      document.body.style.overflow = "";
      document.body.style.overflowY = "auto";

      const href = link.getAttribute("href");
      if (href) {
        const target = document.querySelector(href);
        if (target) {
          // Small delay to ensure menu is closed before scrolling
          setTimeout(() => {
            window.scrollTo({
              top: (target as HTMLElement).offsetTop - 100,
              behavior: "smooth",
            });
          }, 300);
        }
      }
    });
  });

  // Desktop link clicks
  desktopLinks.forEach((link) => {
    link.addEventListener("click", (e) => {
      e.preventDefault();
      desktopLinks.forEach((l) => l.classList.remove("active"));
      link.classList.add("active");

      const href = link.getAttribute("href");
      if (href) {
        const target = document.querySelector(href);
        if (target) {
          window.scrollTo({
            top: (target as HTMLElement).offsetTop - 100,
            behavior: "smooth",
          });
        }
      }
    });
  });

  // Update active on scroll
  window.addEventListener(
    "scroll",
    () => {
      const sections = document.querySelectorAll("section[id]");
      const scrollY = window.scrollY;

      sections.forEach((section) => {
        const top = (section as HTMLElement).offsetTop - 150;
        const height = section.clientHeight;
        const id = section.getAttribute("id");

        if (scrollY >= top && scrollY < top + height) {
          desktopLinks.forEach((link) => {
            link.classList.remove("active");
            if (link.getAttribute("href") === `#${id}`) {
              link.classList.add("active");
            }
          });
        }
      });
    },
    { passive: true },
  );

  // Reading Progress Bar
  const progressBar = document.getElementById("progressBar");

  window.addEventListener(
    "scroll",
    () => {
      const scrollTop = window.scrollY;
      const docHeight =
        document.documentElement.scrollHeight - window.innerHeight;
      const scrollPercent = (scrollTop / docHeight) * 100;

      if (progressBar) {
        progressBar.style.width = scrollPercent + "%";
      }
    },
    { passive: true },
  );
</script>
